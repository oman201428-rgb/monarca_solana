{
  "name": "monarca-solana",
  "version": "0.1.0",
  "description": "Tests y scripts para el programa del token MONARCA (MNCA) en Solana",
  "scripts": {
    "lint:fix": "prettier --write \"tests/**/*.ts\"",
    "test": "anchor test",
    "test:unit": "npx ts-mocha -p ./tsconfig.json -t 1000000 tests/**/*.ts",
    "deploy:mainnet": "pwsh -File scripts/desplegar-solana-completo.ps1",
    "deploy:mainnet:no-meta": "pwsh -File scripts/desplegar-solana-completo.ps1 -SkipMetadata",
    "init-mint": "npx ts-node scripts/initialize-mint-solana.ts",
    "create-metadata": "npx ts-node scripts/create-metadata-solana.ts",
    "actualizar-uri-metadata": "npx ts-node scripts/actualizar-uri-metadata-solana.ts",
    "fijar-metadata-inmutable": "npx ts-node scripts/fijar-metadata-inmutable-solana.ts",
    "renunciar-freeze-authority": "npx ts-node scripts/renunciar-freeze-authority.ts",
    "crear-pool": "npx ts-node scripts/crear-pool-raydium-mnca-usdc.ts",
    "crear-pool:sol": "npx ts-node scripts/crear-pool-raydium-mnca-sol.ts",
    "verificar-spl": "pwsh -File scripts/verificar-pre-despliegue-spl.ps1",
    "desplegar-todo-spl": "pwsh -File scripts/desplegar-todo-spl-mainnet.ps1",
    "desplegar-mnca": "npx ts-node scripts/desplegar-mnca-una-sola-vez.ts",
    "verificar-listados": "npx ts-node scripts/verificar-listados-token.ts",
    "verificar-token": "pwsh -File scripts/abrir-verificacion-token-solana.ps1",
    "verificar-programa-build": "pwsh -File scripts/verificar-programa-verified-build.ps1",
    "subir-github": "pwsh -File scripts/subir-repo-github.ps1",
    "subir-y-verificar": "pwsh -File scripts/subir-repo-github.ps1 && pwsh -File scripts/verificar-programa-verified-build.ps1",
    "instalar-verified-build": "pwsh -File scripts/instalar-y-configurar-verified-build.ps1",
    "pre-vuelo-verified-build": "pwsh -File scripts/verificar-entorno-verified-build.ps1",
    "verified-build-completo": "pwsh -File scripts/ejecutar-verified-build-completo.ps1",
    "verified-build-completo-sin-espera": "pwsh -File scripts/ejecutar-verified-build-completo.ps1 -OmitirEsperaDocker",
    "comparar-token": "npx ts-node scripts/comparar-token-con-referencia.ts",
    "comprobaciones": "pwsh -File scripts/ejecutar-todas-comprobaciones.ps1",
    "verificar-listos": "pwsh -File scripts/verificar-listos-para-tareas.ps1",
    "informe-diferencias": "npx ts-node scripts/generar-informe-diferencias-reales.ts",
    "verificar-metadata-onchain": "npx ts-node scripts/verificar-metadata-uri-onchain.ts",
    "comprobar-argumento-phantom": "npx ts-node scripts/comprobar-argumento-phantom.ts",
    "comprobar-liquidez": "npx ts-node scripts/comprobar-liquidez-ref-vs-mnca.ts",
    "comprobaciones-informe": "npx ts-node scripts/ejecutar-comprobaciones-y-informe.ts",
    "comparar-solscan": "npx ts-node scripts/comparar-tokens-solscan-api.ts",
    "subir-pinata": "npx ts-node scripts/subir-metadata-a-pinata.ts",
    "hacer-token-visible": "npx ts-node scripts/hacer-token-visible.ts",
    "automatizacion-completa": "pwsh -File scripts/ejecutar-automatizacion-completa.ps1"
  },
  "dependencies": {
    "@coral-xyz/anchor": "0.29.0",
    "@metaplex-foundation/mpl-token-metadata": "^2.13.0",
    "@raydium-io/raydium-sdk-v2": "^0.2.32-alpha",
    "@solana/spl-token": "^0.3.9",
    "@solana/web3.js": "^1.87.6",
    "bn.js": "^5.2.2",
    "bs58": "^6.0.0"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.5",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.0",
    "chai": "^4.3.10",
    "mocha": "^10.2.0",
    "prettier": "^3.2.4",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18"
  }
}
